#!/usr/bin/env bash
# This script displays the PID and process name of processes whose name contains the word "bash"

for pid in $(ls /proc | grep -E '^[0-9]+$'); do
  if [ -f "/proc/$pid/comm" ]; then
    proc_name=$(cat /proc/$pid/comm)
    if [[ "$proc_name" == *"bash"* ]]; then
      echo "$pid $proc_name"
    fi
  fi
done
