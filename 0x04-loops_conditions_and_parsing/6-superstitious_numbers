#!/usr/bin/env bash
# This script displays different messages based on the iteration number

# Initialize a counter variable
counter=1

# Use a while loop to iterate from 1 to 10
while [ $counter -le 10 ]; do
    if [ $counter -eq 4 ]; then
        echo "bad luck"   # Display "bad luck" for the 4th iteration
    elif [ $counter -eq 8 ]; then
        echo "good luck"  # Display "good luck" for the 8th iteration
    else
        echo "Best School"  # Display "Best School" for other iterations
    fi
    (( counter++ ))  # Increment the counter
done
